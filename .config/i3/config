exec_always --no-startup-id unclutter
exec_always --no-startup-id wal -R
exec_always --no-startup-id nm-applet
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id setxkbmap -option ctrl:swapcaps

set $mod Mod1

font pango:DejaVu Sans Mono 8

# Locking session
bindsym $mod+Shift+Escape exec i3lock --blur=8

# Toggling keyboard layout
bindsym $mod+Ctrl+e exec setxkbmap us
bindsym $mod+Ctrl+f exec setxkbmap ca

